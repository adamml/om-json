{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://raw.githubusercontent.com/peterataylor/om-json/master/TimeseriesTVP.json",
  "title": "TimeseriesTVP",
  "description": "A TimeseriesML time-value pair encoded timeseries",
  "type": "object",
  "definitions": {
    "TVPairMeasure" : {
      "type":"object",
      "description":"A time-value pair with a measure value.",
      "properties" : {
        "time": {
          "type":"object",
          "$ref":"http://raw.githubusercontent.com/peterataylor/om-json/master/Common.json#/definitions/temporalPrimitive"
        },
        "value": {
          "type":"object",
          "$ref":"http://raw.githubusercontent.com/peterataylor/om-json/master/Common.json#/definitions/measure"
        },
        "metadata": {
          "type":"object",
          "$ref":"http://raw.githubusercontent.com/peterataylor/om-json/master/TimeseriesMetadata.json#/definitions/PointMetadata"
        }
      },
      "additionalProperties":"false"
    },
    "TVPairCategory" : {
      "type":"object",
      "description":"A time-value pair with a catgeory result.",
      "properties" : {
        "time": {
          "type":"object",
          "$ref":"http://raw.githubusercontent.com/peterataylor/om-json/master/Common.json#/definitions/temporalPrimitive"
        },
        "value": {
          "type":"object",
          "$ref":"http://raw.githubusercontent.com/peterataylor/om-json/master/Common.json#/definitions/text"
        }
      },
      "additionalProperties":"false"
    },
    "TimeseriesTVP" : {
        "title": "TimeseriesTVP",
        "description": "a reusable time-series with metadata",
        "type": "object",
        "properties": {
            "metadata": {
                "title": "metadata",
                "description": "Metadata about the timeseries.",
                "$ref": "http://raw.githubusercontent.com/peterataylor/om-json/master/TimeseriesMetadata.json#/properties/TimeseriesMetadata"
            },
            "defaultPointMetadata": {
                "title": "defaultPointMetadata",
                "description": "Default metadata for each point in the timeseries (can be overridden on a per-point basis).",
                "$ref": "http://raw.githubusercontent.com/peterataylor/om-json/master/TimeseriesMetadata.json#/definitions/PointMetadata"
            },
            "points": {
                "title": "points",
                "description": "The data points (time, value pairs) for the timeseries.",
                "type":"array",
                "items": {
                    "oneOf" : [ 
                      { "$ref": "#/definitions/TVPairMeasure" },
                      { "$ref": "#/definitions/TVPairCategory" }
                    ]
                }
            }
        },
        "required": [
          "points"
        ],
        "additionalProperties": false
    }
  },
  "properties": {
      "value": {
          "type": "object",
          "$ref": "#/definitions/TimeseriesTVP"
      }
  },
  "required": [
     "value"
  ],
  "additionalProperties": false
}
