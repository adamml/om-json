{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://raw.githubusercontent.com/peterataylor/om-json/master/Common.json",
  "title": "Common",
  "description": "A collection of commonly used types, such as date times, quantities etc. Should come from somehwere else, one day.",
  "type": "object",
  "properties": {
    "date": {
      "title": "date",
      "type": "string",
      "pattern": "^([1-9][0-9]{3,}|0[0-9]{3})-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])(Z|(\\+|-)((0[0-9]|1[0-3]):[0-5][0-9]|14:00))?$"
    },
    "date-time": {
      "title": "date-time",
      "type": "string",
      "pattern": ""
    },
    "g-year-month": {
      "title": "g-year-month",
      "type": "string",
      "pattern": "^([1-9][0-9]{3,}|0[0-9]{3})-(0[1-9]|1[0-2])(Z|(\\+|-)((0[0-9]|1[0-3]):[0-5][0-9]|14:00))?$"
    },
    "g-year": {
      "title": "g-year",
      "type": "string",
      "pattern": "^([1-9][0-9]{3,}|0[0-9]{3})(Z|(\\+|-)((0[0-9]|1[0-3]):[0-5][0-9]|14:00))?$"
    },
    "duration": {
      "title": "duration",
      "type": "string",
      "pattern": "-?P[0-9]+Y?([0-9]+M)?([0-9]+D)?(T([0-9]+H)?([0-9]+M)?([0-9]+(\\.[0-9]+)?S)?)?"
    },
    "dateTime": {
      "title": "dateTime",
      "type": "string",
      "oneOf": [
        {
          "$ref": "#/properties/date-time"
        },
        { "$ref": "#/properties/date" },
        { "$ref": "#/properties/g-year-month" },
        { "$ref": "#/properties/g-year" }
      ]
    },
    "dateTimeInstant": {
      "title": "dateTimeInstant",
      "type": "object",
      "properties": {
        "instant": { "ref": "#/properties/dateTime" }
      },
      "required": [
        "instant"
      ],
      "additionalProperties": false
    },
    "dateTimePeriod": { 
      "title": "dateTimePeriod", 
      "description": "A time period has a begin and end. Either may be omitted for a single-ended interval.",
      "type": "object",
      "properties": {
        "begin": {
          "$ref": "#/properties/dateTime"
        },
        "end": {
          "$ref": "#/properties/dateTime"
        }
      }, 
      "additionalProperties": false
    },
    "temporalPrimitive": {
      "title": "temporalPrimitive",
      "type": "object",
      "oneOf": [
        { "$ref": "#/properties/dateTimePeriod"  },
        { "$ref": "#/properties/dateTimeInstant" }
      ]
    },
    "temporalObject": {
      "title": "temporalObject",
      "type": "object",
      "oneOf": [
        { "$ref": "#/properties/dateTimePeriod"  },
        { "$ref": "#/properties/dateTimeInstant" },
        { "$ref": "#/properties/duration"        }
      ]
    },
    "measure": {
      "title": "measure",
      "description": "make uom optional, to support the case where a common uom is used in a collection",
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "uom": {
          "type": "string"
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "boolean": {
      "title": "boolean",
      "type": "object",
      "properties": {
        "value": {
          "type": "boolean"
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "count": {
      "title": "count",
      "type": "object",
      "properties": {
        "value": {
          "type": "integer"
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "text": {
      "title": "text",
      "description": "string with optional vocabulary source",
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        },
        "vocabulary": {
            "type": "string",
            "format": "uri"
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "geometryObject": {
      "title": "geometryObject",
      "description": "IS THIS URI CORRECT: maybe http://raw.githubusercontent.com/peterataylor/om-json/master/geometry.json ??",
      "type": "object",
      "$ref": "http://gist.githubusercontent.com/peterataylor/47bcd797e0ef3ac92341/raw/fb6e7428791e9afa6c8c05c5be1f5a20c8e043c1/geometry.json",
      "additionalProperties": false
    },
    "new-duration": {
      "title": "new-duration",
      "type": "object",
      "oneOf": [
        { "$ref": "#/properties/duration" },
        { "$ref": "#/properties/measure"  }
      ],
      "additionalProperties": false
    },
    "link": {
      "title": "link",
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "format": "uri"
        },
        "rel": {
          "type": "string",
          "format": "uri"
        },
        "title": {
          "type": "string"
        }
      },
      "required": [
        "href"
      ],
      "additionalProperties":false
    },
    "linkOrObject": {
      "title": "linkOrObject",
      "type": "object",
      "oneOf": [
        { "$ref": "#/properties/link" },
        { "type": "object"            }
      ]
    }
  }
}
