{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://waterml2.csiro.au/om-json/spatial-sampling.json",
  "title": "Spatial Sampling Feature",
  "description": "  ## EXTENDS SAMPLING FEATURE - DONE HERE BY CLONING ##  Sampling feature whose defining characteristic is that it samples the intended feature by geometric subsetting. ",
  "type": "object",
  "required": [
    "id",
    "type",
    "shape"
  ],
  "definitions": {
    "dateTimePeriod": {
      "title": "dateTimePeriod",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "begin": {
          "type": "string",
          "format": "date-time"
        },
        "end": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "dateTimeInstant": {
      "title": "dateTimeInstant",
      "type": "object",
      "required": [
        "instant"
      ],
      "additionalProperties": false,
      "properties": {
        "instant": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "text": {
      "title": "text",
      "type": "object",
      "required": [
        "value"
      ],
      "properties": {
        "value": {
          "type": "string"
        }
      }
    },
    "measure": {
      "title": "measure",
      "type": "object",
      "required": [
        "value",
        "uom"
      ],
      "properties": {
        "value": {
          "type": "number"
        },
        "uom": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "geometryObject": {
      "title": "geometryObject",
      "type": "object",
      "oneOf": [
        {
          "$ref": "https://gist.githubusercontent.com/peterataylor/47bcd797e0ef3ac92341/raw/fb6e7428791e9afa6c8c05c5be1f5a20c8e043c1/geometry.json"
        }
      ]
    },
    "link": {
      "title": "link",
      "type": "object",
      "required": [
        "href"
      ],
      "properties": {
        "href": {
          "type": "string",
          "format": "uri"
        },
        "rel": {
          "type": "string",
          "format": "uri"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "linkOrObject": {
      "title": "linkOrObject",
      "type": "object",
      "anyOf": [
        {
          "$ref": "#/definitions/link"
        },
        {
          "type": "object"
        }
      ]
    }
  },
  "properties": {
    "id": {
      "title": "id",
      "description": "A unique identifier for the sampling feature",
      "type": "string"
    },
    "sampledFeature": {
      "$ref": "#/definitions/linkOrObject",
      "title": "sampledFeature",
      "description": "the feature which the sampling feature was designed to sample"
    },
    "relatedObservation": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/link"
      },
      "title": "relatedObservation",
      "description": "Observation that uses this sampling feature"
    },
    "complex": {
      "title": "complex",
      "description": "link to related sampling features",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "role",
          "relatedSamplingFeature"
        ],
        "properties": {
          "role": {
            "type": "string",
            "format": "uri"
          },
          "relatedSamplingFeature": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "type": {
      "title": "type",
      "description": "Identifies the type of spatial sampling feature, which determines the type of the shape property",
      "type": "string",
      "format": "uri"
    },
    "shape": {
      "title": "shape",
      "description": "Spatial location and extent of the sampling feature",
      "type": "object",
      "$ref": "#/definitions/geometryObject"
    },
    "hostedProcedure": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/link"
      },
      "title": "hostedProcedure",
      "description": "Observation procedure (instrument, sensor, observer) associated with or hosted by this spatial sampling feature."
    }
  }
}